<Application x:Class="RealtorSystemDesk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:design="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:RealtorSystemDesk"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <design:BundledTheme BaseTheme="Inherit"
                                     PrimaryColor="DeepPurple"
                                     SecondaryColor="Blue"
                                     ColorAdjustment="{design:ColorAdjustment}" />
                <ResourceDictionary
                    Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/themes/materialdesign3.defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="DockPanel">
                <Setter Property="HorizontalAlignment"
                        Value="Stretch" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>