<Page x:Class="RealtorSystemDesk.Pages.ViewAllClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages"
      mc:Ignorable="d"
      Title="Список клиентов"
      Loaded="ViewAllClientPage_OnLoaded"
      d:DesignHeight="450"
      d:DesignWidth="800">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Поиск" />
            <TextBox x:Name="SearchTextBox"
                     TextChanged="SearchTextBox_OnTextChanged" />
            <CheckBox x:Name="ArchiveCheckBox" Content="Архив" Checked="CheckBox_ChangeCheck" Unchecked="CheckBox_ChangeCheck"/>
            <Button x:Name="AddButton"
                    Click="AddButton_OnClick"
                    Content="Добавить" />
            <Button x:Name="StatsButton"
                    Click="StatsButton_OnClick"
                    Content="Статистика" />
        </StackPanel>

        <DataGrid x:Name="ClientDataGrid"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Width="*"
                                    Header="ФИО"
                                    Binding="{Binding FullName}" />
                <DataGridTextColumn Width="*"
                                    Header="Телефон"
                                    Binding="{Binding Phone}" />
                <DataGridTextColumn Width="*"
                                    Header="Почта"
                                    Binding="{Binding Email}" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Подробнее"
                                    Click="InfoButton_OnClick" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>