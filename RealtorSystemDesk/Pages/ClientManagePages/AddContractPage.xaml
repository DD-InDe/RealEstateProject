<Page x:Class="RealtorSystemDesk.Pages.ClientManagePages.AddContractPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages.ClientManagePages"
      mc:Ignorable="d"
      Loaded="AddContractPage_OnLoaded"
      Title="Добавление договора"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical"
                    Margin="7">
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Дата заключения:" />
            <DatePicker SelectedDate="{Binding DateCreate}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Срок действия (в днях):" />
            <TextBox Width="200" Text="{Binding Days}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Вознаграждение риэлтора (буквами):" />
            <TextBox Width="200" Text="{Binding RealtorReward}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Тип договора:" />
            <ComboBox x:Name="TypeComboBox"
                      SelectionChanged="TypeComboBox_OnSelectionChanged"
                      SelectedItem="{Binding Type}"
                      DisplayMemberPath="Name" />

            <Button x:Name="SaveButton"
                    Click="SaveButton_OnClick"
                    Content="Сохранить" />
        </StackPanel>

        <StackPanel x:Name="ObjectPanel"
                    Margin="7"
                    Grid.Column="1"
                    Orientation="Vertical"
                    Visibility="Collapsed">
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Информация об объекте" />

            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Кадастровый номер:" />
            <TextBox Width="200" Text="{Binding CadastralNumber}"
                     MaxLength="12" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Адрес:" />
            <TextBox Width="200" Text="{Binding Address}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Площадь:" />
            <TextBox Width="200" Text="{Binding Square}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Количество комнат:" />
            <TextBox Width="200" Text="{Binding RoomsCount}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Год постройки здания:" />
            <TextBox Width="200" Text="{Binding BuildingYear}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Цена:" />
            <TextBox Width="200" Text="{Binding Price}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Тип объекта:" />
            <ComboBox x:Name="ObjectTypeComboBox"
                      SelectionChanged="ObjectTypeComboBox_OnSelectionChanged"
                      SelectedItem="{Binding Type}"
                      DisplayMemberPath="Name" />

            <StackPanel x:Name="ApartmentPanel"
                        Visibility="Collapsed"
                        Orientation="Vertical">
                <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Класс квартиры:" />
                <ComboBox x:Name="ClassComboBox"
                          SelectedItem="{Binding Class}"
                          DisplayMemberPath="Name" />
                <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Этаж:" />
                <TextBox Width="200" Text="{Binding Floor}" />
            </StackPanel>
            <StackPanel x:Name="HousePanel"
                        Visibility="Collapsed"
                        Orientation="Vertical">
                <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Количество этажей в здании:" />
                <TextBox Width="200" Text="{Binding FloorsCount}" />
                <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Площадь участка:" />
                <TextBox Width="200" Text="{Binding PlotSquare}" />
                <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Материал здания:" />
                <TextBox Width="200" Text="{Binding Material}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>