<Page x:Class="RealtorSystemDesk.Pages.ClientManagePages.AddContractPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages.ClientManagePages"
      mc:Ignorable="d"
      Loaded="AddContractPage_OnLoaded"
      Title="Добавление договора"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical"
                    Margin="5">
            <TextBlock Text="Дата заключения:" />
            <DatePicker SelectedDate="{Binding DateCreate}" />
            <TextBlock Text="Срок действия (в днях):" />
            <TextBox Text="{Binding Days}" />
            <TextBlock Text="Вознаграждение риэлтора (буквами):" />
            <TextBox Text="{Binding RealtorReward}" />
            <TextBlock Text="Тип договора:" />
            <ComboBox x:Name="TypeComboBox"
                      SelectionChanged="TypeComboBox_OnSelectionChanged"
                      SelectedItem="{Binding Type}"
                      DisplayMemberPath="Name" />

            <Button x:Name="SaveButton"
                    Click="SaveButton_OnClick"
                    Content="Сохранить" />
        </StackPanel>

        <StackPanel x:Name="ObjectPanel"
                    Margin="5"
                    Grid.Column="1"
                    Orientation="Vertical"
                    Visibility="Collapsed">
            <TextBlock Text="Информация об объекте" />

            <TextBlock Text="Кадастровый номер:" />
            <TextBox Text="{Binding CadastralNumber}"
                     MaxLength="12" />
            <TextBlock Text="Адрес:" />
            <TextBox Text="{Binding Address}" />
            <TextBlock Text="Площадь:" />
            <TextBox Text="{Binding Square}" />
            <TextBlock Text="Количество комнат:" />
            <TextBox Text="{Binding RoomsCount}" />
            <TextBlock Text="Год постройки здания:" />
            <TextBox Text="{Binding BuildingYear}" />
            <TextBlock Text="Цена:" />
            <TextBox Text="{Binding Price}" />
            <TextBlock Text="Тип объекта:" />
            <ComboBox x:Name="ObjectTypeComboBox"
                      SelectionChanged="ObjectTypeComboBox_OnSelectionChanged"
                      SelectedItem="{Binding Type}"
                      DisplayMemberPath="Name" />

            <StackPanel x:Name="ApartmentPanel"
                        Visibility="Collapsed"
                        Orientation="Vertical">
                <TextBlock Text="Класс квартиры:" />
                <ComboBox x:Name="ClassComboBox"
                          SelectedItem="{Binding Class}"
                          DisplayMemberPath="Name" />
                <TextBlock Text="Этаж:" />
                <TextBox Text="{Binding Floor}" />
            </StackPanel>
            <StackPanel x:Name="HousePanel"
                        Visibility="Collapsed"
                        Orientation="Vertical">
                <TextBlock Text="Количество этажей в здании:" />
                <TextBox Text="{Binding FloorsCount}" />
                <TextBlock Text="Площадь участка:" />
                <TextBox Text="{Binding PlotSquare}" />
                <TextBlock Text="Материал здания:" />
                <TextBox Text="{Binding Material}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>