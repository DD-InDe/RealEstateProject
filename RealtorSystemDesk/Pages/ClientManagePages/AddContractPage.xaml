<Page x:Class="RealtorSystemDesk.Pages.ClientManagePages.AddContractPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages.ClientManagePages"
      mc:Ignorable="d"
      Loaded="AddContractPage_OnLoaded"
      Title="Добавление договора"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Дата заключения:" />
            <DatePicker SelectedDate="{Binding DateCreate}" />
            <TextBlock Text="Срок действия (в днях):" />
            <TextBox Text="{Binding Days}" />
            <TextBlock Text="Тип договора:" />
            <ComboBox x:Name="TypeComboBox"
                      SelectedItem="{Binding Type}"
                      DisplayMemberPath="Name" />

            <Button x:Name="SaveButton"
                    Click="SaveButton_OnClick"
                    Content="Сохранить" />
        </StackPanel>

        <StackPanel x:Name="ObjectPanel"
                    Grid.Column="1"
                    Orientation="Vertical"
                    Visibility="Collapsed">
            <TextBlock Text="Информация об объекте" />

            <TextBlock Text="Адрес:" />
            <TextBox Text="{Binding Address}" />
            <TextBlock Text="Этаж:" />
            <TextBox Text="{Binding Floor}" />
            <TextBlock Text="Количество этажей в здании:" />
            <TextBox Text="{Binding FloorsCount}" />
            <TextBlock Text="Количество комнат:" />
            <TextBox Text="{Binding RoomsCount}" />
            <TextBlock Text="Площадь:" />
            <TextBox Text="{Binding Square}" />
            <TextBlock Text="Год постройки здания:" />
            <TextBox Text="{Binding BuildingYear}" />
            <TextBlock Text="Тип здания:" />
            <ComboBox x:Name="ObjectTypeComboBox"
                      SelectedItem="{Binding ObjectType}"
                      DisplayMemberPath="Name" />
            <TextBlock Text="Цена:" />
            <TextBox Text="{Binding Price}" />
            <TextBlock Text="Описание:" />
            <TextBlock Text="{Binding Description}" />
            <TextBlock Text="Заметка:" />
            <TextBox Text="{Binding Note}" />
        </StackPanel>
    </Grid>
</Page>