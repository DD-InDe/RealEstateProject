<Page x:Class="RealtorSystemDesk.Pages.ClientManagePages.EditClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages.ClientManagePages"
      mc:Ignorable="d"
      Title="Управление клиентом"
      Loaded="EditClientPage_OnLoaded"
      d:DesignHeight="450"
      d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical"
                    Grid.Column="0">
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Фамилия:" />
            <TextBox Width="200" Text="{Binding LastName}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Имя:" />
            <TextBox Width="200" Text="{Binding FirstName}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Отчество:" />
            <TextBox Width="200" Text="{Binding MiddleName}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Дата рождения:" />
            <DatePicker SelectedDate="{Binding BirthDateTime}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Телефон:" />
            <TextBox Width="200" Text="{Binding Phone}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Почта:" />
            <TextBox Width="200" Text="{Binding Email}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Пол:" />
            <ComboBox x:Name="GenderComboBox"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding Gender}" />

            <Button x:Name="SaveButton"
                    Click="SaveButton_OnClick"
                    Content="Сохранить" />
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    Grid.Column="1">
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Серия паспорта:" />
            <TextBox Width="200" MaxLength="4"
                     Text="{Binding Passport.Serial}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Номер паспорта:" />
            <TextBox Width="200" MaxLength="6"
                     Text="{Binding Passport.Number}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Дата выдачи паспорта:" />
            <DatePicker SelectedDate="{Binding Passport.IssuedDateTime}" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Кем выдан паспорт:" />
            <TextBox Width="200" Text="{Binding Passport.IssuedBy}" />
        </StackPanel>
    </Grid>
</Page>