<Page x:Class="RealtorSystemDesk.Pages.ClientManagePages.ClientInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages.ClientManagePages"
      mc:Ignorable="d"
      Loaded="ClientInfoPage_OnLoaded"
      Title="Информация о клиенте"
      d:DesignHeight="450"
      d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
                    Orientation="Vertical">
            <TextBlock Text="Информация о клиенте" />

            <TextBlock Text="Фамилия:" />
            <TextBlock Text="{Binding LastName}" />
            <TextBlock Text="Имя:" />
            <TextBlock Text="{Binding FirstName}" />
            <TextBlock Text="Отчество:" />
            <TextBlock Text="{Binding MiddleName}" />
            <TextBlock Text="Дата рождения:" />
            <TextBlock Text="{Binding BirthDate}" />
            <TextBlock Text="Телефон:" />
            <TextBlock Text="{Binding Phone}" />
            <TextBlock Text="Почта:" />
            <TextBlock Text="{Binding Email}" />
            <TextBlock Text="Пол:" />
            <TextBlock Text="{Binding Gender.Name}" />
            <TextBlock Text="Серия паспорта:" />
            <TextBlock Text="{Binding Passport.Serial}" />
            <TextBlock Text="Номер паспорта:" />
            <TextBlock Text="{Binding Passport.Number}" />
            <TextBlock Text="Дата выдачи паспорта:" />
            <TextBlock Text="{Binding Passport.IssuedDate}" />
            <TextBlock Text="Кем выдан паспорт:" />
            <TextBlock Text="{Binding Passport.IssuedBy}" />

            <Button x:Name="EditButton"
                    Content="Редактировать данные"
                    Click="EditButton_OnClick" />
            <Button x:Name="ArchiveButton"
                    Content="Архивировать"
                    Click="ArchiveClientButton_OnClick" />
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Text="Контракты" />
                <Button x:Name="AddContractButton"
                        Content="Добавить контракт"
                        Click="AddContractButton_OnClick" />
                <DataGrid x:Name="ContractDataGrid"
                          IsReadOnly="True"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*"
                                            Header="Статус:"
                                            Binding="{Binding Active}" />
                        <DataGridTextColumn Width="*"
                                            Header="Дата составления:"
                                            Binding="{Binding DateCreate}" />
                        <DataGridTextColumn Width="*"
                                            Header="Действителен до:"
                                            Binding="{Binding ValidUntil}" />
                        <DataGridTextColumn Width="*"
                                            Header="Тип:"
                                            Binding="{Binding Type.Name}" />
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="В архив"
                                            Visibility="{Binding ArchiveButtonVisibility}"
                                            Click="ArchiveContractButton_OnClick" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Печать"
                                            Click="PrintButton_OnClick" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <StackPanel Orientation="Vertical"
                        Grid.Row="1">
                <TextBlock Text="Документы" />
                <Button  x:Name="AddDocumentButton" Content="Загрузить"
                         Click="DocumentAddButton_OnClick" />
                <DataGrid x:Name="DocumentDataGrid"
                          IsReadOnly="True"
                          AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*"
                                            Header="Название файла:"
                                            Binding="{Binding Document.FileName}" />
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Скачать и открыть"
                                            Click="DocumentLoadButton_OnClick" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Удалить"
                                            Click="DocumentDeleteButton_OnClick" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>