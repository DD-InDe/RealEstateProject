<Page x:Class="RealtorSystemDesk.Pages.AccountManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages"
      mc:Ignorable="d"
      Title="Профиль"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <StackPanel Orientation="Vertical" x:Name="Panel">
        <TextBlock Text="Фамилия:" />
        <TextBox x:Name="LastNameTextBox"
                 Text="{Binding User.LastName}" />
        <TextBlock Text="Имя:" />
        <TextBox x:Name="FirstNameTextBox"
                 Text="{Binding User.FirstName}" />
        <TextBlock Text="Отчество:" />
        <TextBox x:Name="MiddleNameTextBox"
                 Text="{Binding User.MiddleName}" />
        <TextBlock Text="Логин:" />
        <TextBox x:Name="LoginTextBox"
                 IsEnabled="{Binding IsRegistration}"
                 Text="{Binding User.Login}" />
        <TextBlock Text="Пароль:" />
        <PasswordBox x:Name="PasswordBox" />
        <TextBlock Text="Повторите пароль:" />
        <PasswordBox x:Name="RepeatPasswordBox" />

        <Button x:Name="SaveButton"
                Content="Сохранить"
                Click="SaveButton_OnClick" />
        <Button x:Name="BackButton"
                Visibility="Collapsed"
                Content="Назад"
                Click="BackButton_OnClick" />
    </StackPanel>
</Page>