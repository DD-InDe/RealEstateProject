<Page x:Class="RealtorSystemDesk.Pages.ViewAllObjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages"
      mc:Ignorable="d"
      Title="Объекты"
      Loaded="ViewAllObjectPage_OnLoaded"
      d:DesignHeight="450"
      d:DesignWidth="800">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Поиск" />
            <TextBox Width="200" x:Name="SearchTextBox"
                     TextChanged="SearchTextBox_OnTextChanged" />
            <CheckBox x:Name="ArchiveCheckBox" Content="Архив"
                      Checked="CheckBox_Check"
                      Unchecked="CheckBox_Check" />
            <TextBlock
                               Margin="7"
                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                               VerticalAlignment="Center" Text="Тип объекта"/>
            <ComboBox x:Name="TypeComboBox" DisplayMemberPath="Name" SelectionChanged="TypeComboBox_OnSelectionChanged"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  x:Name="ObjectDataGrid"
                  IsReadOnly="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Статус"
                                    Width="*"
                                    Binding="{Binding Status}" />
                <DataGridTextColumn Header="Адрес"
                                    Width="*"
                                    Binding="{Binding Address}" />
                <DataGridTextColumn Header="Тип объекта"
                                    Width="*"
                                    Binding="{Binding ObjectType.Name}" />
                <DataGridTextColumn Header="Клиент"
                                    Width="*"
                                    Binding="{Binding Contract.Client.FullName}" />
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Подробнее"
                                    x:Name="InfoButton"
                                    Click="InfoButton_OnClick" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>