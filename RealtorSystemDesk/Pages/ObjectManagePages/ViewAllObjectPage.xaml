<Page x:Class="RealtorSystemDesk.Pages.ViewAllObjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages"
      mc:Ignorable="d"
      Title="Объекты"
      Loaded="ViewAllObjectPage_OnLoaded"
      d:DesignHeight="450"
      d:DesignWidth="800">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Поиск" />
            <TextBox x:Name="SearchTextBox"
                     TextChanged="SearchTextBox_OnTextChanged" />
            <CheckBox Content="Архив"
                      Checked="CheckBox_Check"
                      Unchecked="CheckBox_Check" />
            <Button x:Name="AddButton"
                    Click="AddButton_OnClick"
                    Content="Добавить" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  x:Name="ObjectDataGrid"
                  IsReadOnly="True"
                  AutoGenerateColumns="False">
        </DataGrid>
    </Grid>
</Page>