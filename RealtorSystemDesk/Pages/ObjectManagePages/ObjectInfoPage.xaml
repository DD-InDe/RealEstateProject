<Page x:Class="RealtorSystemDesk.Pages.ObjectManagePages.ObjectInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:design="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:RealtorSystemDesk.Pages.ObjectManagePages"
      mc:Ignorable="d"
      x:Name="ThisPage"
      Loaded="ObjectInfoPage_OnLoaded"
      Title="Информация об объекте"
      d:DesignHeight="750"
      d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <design:Card Margin="5"
                             Grid.Column="0"
                             Padding="5">
                    <StackPanel x:Name="MainPanel"
                                Orientation="Vertical">
                        <DockPanel>
                            <TextBlock HorizontalAlignment="Left"
                                       Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       Margin="7"
                                       Text="Кадастровый номер:" />
                            <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Text="{Binding CadastralNumber}" />
                        </DockPanel>
                        <DockPanel>
                            <TextBlock HorizontalAlignment="Left"
                                       Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       Margin="7"
                                       Text="Адрес:" />
                            <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Text="{Binding Address}" />
                        </DockPanel>
                        <DockPanel>
                            <TextBlock HorizontalAlignment="Left"
                                       Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       Margin="7"
                                       Text="Площадь:" />
                            <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Text="{Binding Square}" />
                        </DockPanel>
                        <DockPanel>
                            <TextBlock HorizontalAlignment="Left"
                                       Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       Margin="7"
                                       Text="Количество комнат:" />
                            <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Text="{Binding RoomsCount}" />
                        </DockPanel>
                        <DockPanel>
                            <TextBlock HorizontalAlignment="Left"
                                       Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       Margin="7"
                                       Text="Год постройки здания:" />
                            <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Text="{Binding BuildingYear}" />
                        </DockPanel>
                        <DockPanel>
                            <TextBlock HorizontalAlignment="Left"
                                       Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       Margin="7"
                                       Text="Цена:" />
                            <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Text="{Binding Price}" />
                        </DockPanel>
                        <DockPanel>
                            <TextBlock HorizontalAlignment="Left"
                                       Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       FontWeight="Medium"
                                       Margin="7"
                                       Text="Тип объекта:" />
                            <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Text="{Binding Type.Name}" />
                        </DockPanel>

                        <StackPanel x:Name="ApartmentPanel"
                                    Visibility="Collapsed"
                                    Orientation="Vertical">
                            <DockPanel>
                                <TextBlock HorizontalAlignment="Left"
                                           Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Margin="7"
                                           Text="Класс квартиры:" />
                                <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Text="{Binding Class.Name}" />
                            </DockPanel>
                            <DockPanel>
                                <TextBlock HorizontalAlignment="Left"
                                           Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Margin="7"
                                           Text="Этаж:" />
                                <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Text="{Binding Floor}" />
                            </DockPanel>
                        </StackPanel>
                        <StackPanel x:Name="HousePanel"
                                    Visibility="Visible"
                                    Orientation="Vertical">
                            <DockPanel>
                                <TextBlock HorizontalAlignment="Left"
                                           Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Margin="7"
                                           Text="Количество этажей в здании:" />
                                <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Text="{Binding FloorsCount}" />
                            </DockPanel>
                            <DockPanel>
                                <TextBlock HorizontalAlignment="Left"
                                           Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Margin="7"
                                           Text="Площадь участка:" />
                                <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Text="{Binding PlotSquare}" />
                            </DockPanel>
                            <DockPanel>
                                <TextBlock HorizontalAlignment="Left"
                                           Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Margin="7"
                                           Text="Материал здания:" />
                                <TextBlock Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Text="{Binding Material}" />
                            </DockPanel>

                        </StackPanel>


                        <Button Content="Клиент"
                                Margin="5"
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                Click="CustomerButton_OnClick" />
                    </StackPanel>
                </design:Card>
            </ScrollViewer>
            <design:Card Margin="5"
                         Grid.Row="0"
                         Grid.Column="1"
                         Padding="5">
                <ItemsControl x:Name="DocumentListView">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="DarkGray"
                                    BorderThickness="0,0,0,1">
                                <DockPanel>
                                    <TextBlock HorizontalAlignment="Left"
                                               Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                               VerticalAlignment="Center"
                                               FontWeight="Medium"
                                               Margin="7"
                                               Text="{Binding DocumentType.Name}" />
                                    <Button Margin="7"
                                            Click="FileButton_OnClick"
                                            Style="{DynamicResource MaterialDesignFlatButton}"
                                            HorizontalAlignment="Right"
                                            Content="{Binding ButtonText}" />
                                </DockPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </design:Card>
        </Grid>

        <design:Card Grid.Row="1"
                     Margin="5"
                     Padding="5">
            <StackPanel Orientation="Vertical">
                <TextBlock Style="{DynamicResource MaterialDesignTitleSmallTextBlock}"
                           VerticalAlignment="Center"
                           Text="Фотографии объекта"
                           HorizontalAlignment="Center" />
                <Button x:Name="AddPhotoButton"
                        Content="+"
                        Padding="5"
                        Style="{DynamicResource MaterialDesignFlatButton}"
                        HorizontalAlignment="Left"
                        Click="AddPhotoButton_OnClick" />

                <ScrollViewer Width="{Binding ElementName=ThisPage, Path=ActualWidth}"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="PhotoItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Image Width="300"
                                       Height="200"
                                       Stretch="Fill"
                                       Margin="20,10"
                                       Source="{Binding Photo}">
                                    <Image.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Удалить"
                                                      Click="DeleteItem_OnClick" />
                                        </ContextMenu>
                                    </Image.ContextMenu>
                                </Image>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </design:Card>
    </Grid>
</Page>